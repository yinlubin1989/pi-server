<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    
    <canvas id="video-canvas"></canvas>

    <button id="pull">PULL</button>
    <button id="restart">PM2_RESTART</button>
    <button id="ledon">led-on</button>
    <button id="ledoff">led-off</button>
    <div id="screen"></div>

    
    
    <script type="text/javascript" src="/javascripts/jsmpeg.min.js"></script>
    <script src="https://cdn.bootcss.com/jquery/3.3.1/jquery.js"></script>


  <script type="text/javascript">
		var canvas = document.getElementById('video-canvas');
		var url = 'ws://20u88480e3.iok.la:18812';
		var player = new JSMpeg.Player(url, {canvas: canvas});
	</script>

    <script>

        $('#ledon').click(() => {
          $.ajax({
            url: '/api/led/on'
          })
        });

        $('#ledon').click(() => {
          $.ajax({
            url: '/api/led/off'
          })
        });


        $('#pull').click(() => {
          $.ajax({
            url: '/api/pull'
          }).done(res => {
            $('#screen').append(res).append('<br>------------------------------------<br>')
          })
        });

        $('#restart').click(() => {
          $.ajax({
            url: '/api/restart'
          }).done(res => {
            $('#screen').append(res).append('<br>------------------------------------<br>')
          })
        });
    </script>
  </body>
</html>
